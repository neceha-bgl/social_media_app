.row
  .span12
    %h3 User
    %hr
  .span11.offset1
    %dl.dl-horizontal
      %dt User name
      %dd
        %a{href: "#", "data-type" => "text", "data-resource" => "user", "data-name" => "user_name", "data-url" => "/users/#{@user.id}", "data-original-title" => "Enter name"}= @user.user_name
      %dt Email 
      %dd
        %a{href: "#", "data-type" => "text", "data-resource" => "user", "data-name" => "email", "data-url" => "/users/#{@user.id}", "data-original-title" => "Enter email"}= @user.email if @user.email
      %dt Registred
      %dd= @user.created_at.to_date
      %dt Birthday
      %dd
        %a{href: "#", "data-type" => "date", "data-resource" => "user", "data-name" => "birthday", "data-url" => "/users/#{@user.id}", "data-original-title" => "Enter birthday"}= @user.birthday
