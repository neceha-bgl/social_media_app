.modal{ id: "delete-user-#{user.id}", style: "display: none;"}
  = simple_form_for user, :url => user_path(user), :remote => true, :html => {:method => :delete, :class => 'form-horizontal' } do |f|
    .modal-header
      %a.close{ "data-dismiss" => "modal"} &#215;
      %h3 Delete user
    .modal-body Are you sure?
    .modal-footer
      = f.submit "Submit", :class => "btn btn-primary"
      %a.btn{ "data-dismiss" => "modal", href: "#"} Close
